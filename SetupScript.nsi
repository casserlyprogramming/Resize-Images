Section "MainSection" SEC01
  SetOutPath "$INSTDIR"
  SetOverwrite ifnewer
  File "ResizeImages2\bin\Debug\ResizeImages2.vshost.exe.manifest"
  File "ResizeImages2\bin\Debug\ResizeImages2.vshost.exe.config"
  File "ResizeImages2\bin\Debug\ResizeImages2.vshost.exe"
