  Delete "$INSTDIR\ResizeImages2.vshost.exe"
  Delete "$INSTDIR\ResizeImages2.vshost.exe.config"
  Delete "$INSTDIR\ResizeImages2.vshost.exe.manifest"

  Delete "$SMPROGRAMS\Resize Images\Uninstall.lnk"
  Delete "$SMPROGRAMS\Resize Images\Website.lnk"
  Delete "$DESKTOP\Resize Images.lnk"
  Delete "$SMPROGRAMS\Resize Images\Resize Images.lnk"

  RMDir "$SMPROGRAMS\Resize Images"
